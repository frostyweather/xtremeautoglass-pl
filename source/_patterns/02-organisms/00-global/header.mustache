<header class="c-header" role="banner">
	<div class="c-header__inner">
		<div class="c-header__top">
			<div class="c-header__left">
				{{> molecules-logo-link }}
				<h3 class="c-header__tagline">We do it right the 1st time!</h3>
			</div>

			<div class="c-header__text">
				<div class="c-header__info">
					<a href="{{ url }}" class="v-card c-header__quote-link">
						<h2 class="c-header__quote">Call For An Instant Quote</h2>
						<span class="c-header__phone tel">412-226-5006</span>
					</a>
					<span class="c-header__span">We work on all makes and models</span>
				</div>
				<div class="c-header__contact v-card">
					{{# socialNavSection }}
					{{> molecules-social-nav }}
					{{/ socialNavSection }}
					<address class="c-header__address adr">
						<span class="street-address">23 D Dewey Lane</span><br />
						<span class="locality">Gibsonia</span>,
						<abbr class="region" title="Pennsylvania">PA</abbr>
						<span class="postal-code">15044</span>
					</address>
				</div>
			</div>
		</div>
	</div>
</header><!-- end c-header -->

<div class="c-navigation-bar js-nav-target js-sticky">
	<div class="c-navigation-bar__inner">
		{{# navToggle }}
		{{> molecules-button }}
		{{/ navToggle }}

		{{# getQuote }}
		{{> molecules-button }}
		{{/ getQuote }}

		{{# primaryNav }}
		<div class="c-nav-container">
			{{# closeButton }}
			{{> molecules-button }}
			{{/ closeButton }}
			{{> molecules-primary-nav }}
		</div>
		{{/ primaryNav }}
	</div>

</div><!-- end c-navigation-bar -->
