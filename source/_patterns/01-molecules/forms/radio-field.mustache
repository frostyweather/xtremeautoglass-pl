<div class="c-field {{ styleModifier }} js-field">

	<h4 for="{{ id }}" class="c-field__label">{{{ label }}}</h4>

    <div class="c-field__body">

        <ul class="c-option-list">

            {{# radios }}
            <li class="c-option-list__item js-radio-trigger-parent">

                <label class="c-input-group" for="{{ id }}">
                    <input id="{{ id }}" type="radio" name="{{ name }}" value="{{ value }}" class="c-input-group__control js-radio-trigger" {{# checked}}checked{{/ checked }} {{# disabled }}disabled{{/ disabled }} {{# readOnly }}readonly{{/ readOnly }}>
                    <span class="c-input-group__text">{{{ label }}}</span>
                </label>

            </li><!-- end c-radio-list__item -->
            {{/ radios }}

        </ul><!-- end c-option-list -->

    </div><!-- end c-field__body -->

	{{# fieldNote }}
    <div class="c-field__note js-field-note">{{{ fieldNote }}}</div>
    {{/ fieldNote }}

</div><!-- end c-field -->
